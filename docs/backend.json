{
  "entities": {
    "ContactMessage": {
      "title": "Contact Message",
      "description": "Represents a message submitted through the contact form.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "phone": { "type": "string" },
        "subject": { "type": "string" },
        "message": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "email", "message", "createdAt"]
    },
    "Product": {
      "title": "Product",
      "description": "Represents a product in the store.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "slug": { "type": "string" },
        "description": { "type": "string" },
        "category": { "type": "string" },
        "images": { "type": "array", "items": { "type": "string" } },
        "price": { "type": "number" },
        "originalPrice": { "type": "number" },
        "rating": { "type": "number" },
        "reviews": { "type": "number" },
        "isNew": { "type": "boolean" },
        "stock": { "type": "number" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "slug", "description", "category", "images", "price", "stock", "rating", "reviews"]
    },
    "Order": {
      "title": "Order",
      "description": "Represents a customer order.",
      "type": "object",
      "properties": {
        "userId": { "type": "string", "description": "The ID of the user who placed the order (if logged in)." },
        "productName": { "type": "string" },
        "quantity": { "type": "number" },
        "totalPrice": { "type": "number" },
        "customerName": { "type": "string" },
        "address": { "type": "string" },
        "phone": { "type": "string" },
        "paymentMethod": { "type": "string" },
        "status": { "type": "string", "enum": ["Pending", "Processing", "Shipped", "Delivered", "Cancelled"], "description": "The status of the order." },
        "createdAt": { "type": "string", "format": "date-time", "description": "The timestamp when the order was created." }
      },
      "required": ["productName", "quantity", "totalPrice", "customerName", "address", "phone", "paymentMethod", "createdAt", "status"]
    },
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" }
      },
      "required": ["email"]
    },
    "Admin": {
      "title": "Admin",
      "description": "Represents an admin user flag.",
      "type": "object",
      "properties": {
        "isAdmin": {
          "type": "boolean",
          "description": "Set to true if the user is an admin."
        }
      },
      "required": ["isAdmin"]
    }
  },
  "auth": {
    "providers": ["email"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/backend/entities/UserProfile" },
      "description": "Stores user profile information."
    },
    "/orders/{orderId}": {
      "schema": { "$ref": "#/backend/entities/Order" },
      "description": "Stores all customer orders."
    },
    "/admins/{userId}": {
      "schema": { "$ref": "#/backend/entities/Admin" },
      "description": "List of admin user UIDs."
    },
    "/products/{productId}": {
      "schema": { "$ref": "#/backend/entities/Product" },
      "description": "Stores all products available in the store."
    },
    "/contacts/{contactId}": {
      "schema": { "$ref": "#/backend/entities/ContactMessage" },
      "description": "Stores messages submitted from the contact form."
    }
  }
}
