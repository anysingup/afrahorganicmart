{
  "entities": {
    "ContactMessage": {
      "title": "Contact Message",
      "description": "Represents a message submitted through the contact form.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "phone": { "type": "string" },
        "subject": { "type": "string" },
        "message": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "email", "message", "createdAt"]
    },
    "Product": {
      "title": "Product",
      "description": "Represents a product in the store.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "slug": { "type": "string" },
        "description": { "type": "string" },
        "category": { "type": "string" },
        "images": { "type": "array", "items": { "type": "string" } },
        "price": { "type": "number" },
        "originalPrice": { "type": "number" },
        "rating": { "type": "number", "description": "The sum of all star ratings for the product." },
        "reviews": { "type": "number", "description": "The number of reviews/ratings for the product." },
        "sales": { "type": "number", "description": "The total number of times this product has been sold." },
        "isNew": { "type": "boolean" },
        "stock": { "type": "number" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "slug", "description", "category", "images", "price", "stock", "rating", "reviews"]
    },
    "Order": {
      "title": "Order",
      "description": "Represents a customer order.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user who placed the order (if logged in)."
        },
        "items": {
          "type": "array",
          "description": "A list of items included in the order.",
          "items": {
            "type": "object",
            "properties": {
              "productId": { "type": "string" },
              "productName": { "type": "string" },
              "quantity": { "type": "number" },
              "price": {
                "type": "number",
                "description": "The price of the product at the time of purchase."
              }
            },
            "required": ["productId", "productName", "quantity", "price"]
          }
        },
        "totalPrice": { "type": "number" },
        "customerName": { "type": "string" },
        "address": { "type": "string" },
        "phone": { "type": "string" },
        "paymentMethod": { "type": "string" },
        "status": {
          "type": "string",
          "enum": ["Pending", "Processing", "Shipped", "Delivered", "Cancelled"],
          "description": "The status of the order."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the order was created."
        }
      },
      "required": [
        "items",
        "totalPrice",
        "customerName",
        "address",
        "phone",
        "paymentMethod",
        "createdAt",
        "status"
      ]
    },
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" },
        "photoURL": { "type": "string", "format": "uri" }
      },
      "required": ["email"]
    },
    "Admin": {
      "title": "Admin",
      "description": "Represents an admin user flag.",
      "type": "object",
      "properties": {
        "isAdmin": {
          "type": "boolean",
          "description": "Set to true if the user is an admin."
        }
      },
      "required": ["isAdmin"]
    },
    "WishlistItem": {
      "title": "Wishlist Item",
      "description": "A reference to a product in a user's wishlist.",
      "type": "object",
      "properties": {
        "productId": {
          "type": "string"
        },
        "addedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "productId",
        "addedAt"
      ]
    },
    "CartItem": {
      "title": "Cart Item",
      "description": "Represents a product in a user's shopping cart.",
      "type": "object",
      "properties": {
        "productId": {
          "type": "string"
        },
        "quantity": {
          "type": "number"
        },
        "addedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "productId",
        "quantity",
        "addedAt"
      ]
    },
    "UserRating": {
      "title": "User Rating",
      "description": "Stores a user's rating for a specific product.",
      "type": "object",
      "properties": {
        "rating": {
          "type": "number",
          "description": "The star rating (1-5) given by the user."
        }
      },
      "required": [
        "rating"
      ]
    }
  },
  "auth": {
    "providers": [
      "email",
      "google.com"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/backend/entities/UserProfile"
      },
      "description": "Stores user profile information."
    },
    "/users/{userId}/wishlist/{productId}": {
      "schema": {
        "$ref": "#/backend/entities/WishlistItem"
      },
      "description": "Stores a user's wishlisted products. The document ID is the product ID."
    },
    "/users/{userId}/cart/{cartItemId}": {
      "schema": {
        "$ref": "#/backend/entities/CartItem"
      },
      "description": "Stores items in a user's shopping cart."
    },
    "/users/{userId}/ratedProducts/{productId}": {
      "schema": {
        "$ref": "#/backend/entities/UserRating"
      },
      "description": "Stores a user's rating for a single product to prevent multiple ratings."
    },
    "/orders/{orderId}": {
      "schema": {
        "$ref": "#/backend/entities/Order"
      },
      "description": "Stores all customer orders."
    },
    "/admins/{userId}": {
      "schema": {
        "$ref": "#/backend/entities/Admin"
      },
      "description": "List of admin user UIDs."
    },
    "/products/{productId}": {
      "schema": {
        "$ref": "#/backend/entities/Product"
      },
      "description": "Stores all products available in the store."
    },
    "/contacts/{contactId}": {
      "schema": {
        "$ref": "#/backend/entities/ContactMessage"
      },
      "description": "Stores messages submitted from the contact form."
    }
  }
}
