rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();

      match /wishlist/{productId} {
        allow read, write, delete: if isOwner(userId);
      }

      match /cart/{cartItemId} {
        allow read, write, delete: if isOwner(userId);
      }
      
      match /ratedProducts/{productId} {
        allow read, write: if isOwner(userId);
      }
    }

    match /admins/{userId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /orders/{orderId} {
      // Anyone can create an order, even non-logged-in users for guest checkout
      allow create: if true;
      // Admins can see and manage all orders
      allow read, list, update, delete: if isAdmin();
      // Logged-in users can see their own orders, and list their own orders
      allow read: if request.auth != null && resource.data.userId != null && request.auth.uid == resource.data.userId;
      allow list: if request.auth != null && request.query.where.userId == request.auth.uid;
    }

    match /products/{productId} {
      // Everyone should be able to read products for the storefront
      allow read: if true;
      // Only admins can create, update, and delete products
      allow write: if isAdmin();
    }

    match /contacts/{contactId} {
      // Anyone can submit a contact message
      allow create: if true;
      // Only admins can read and delete messages
      allow read, list, delete: if isAdmin();
    }
  }
}
